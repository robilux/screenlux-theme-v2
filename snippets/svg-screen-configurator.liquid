{% comment %}
  SVG Screen Configurator - Accurate Figma Design

  Structure (node 151:891):
  - Cassette (64px): Left End + Container + Container Fixed (Solar) + Right End
  - Rails: 26px each side
  - Fabric: Fills center
  - Bottom Plate: 16px

  Default: 1500mm x 1000mm at 0.3 scale

  JavaScript handles dynamic rendering.
{% endcomment %}

<div
  id="svg-screen-configurator"
  class="svg-screen-configurator"
  data-frame-color="anthracite"
  data-fabric-color="charcoal"
  data-fabric-type="4-percent"
  data-motor="wired"
  data-width="1500"
  data-height="1000"
  aria-label="Interactive screen configurator preview"
>
  <svg
    viewBox="0 0 490 340"
    preserveAspectRatio="xMidYMid meet"
    class="configurator-svg"
    role="img"
    aria-label="Screen preview showing current configuration"
  >
    <defs>
      <!-- Corner gradients -->
      <radialGradient id="cornerTL" cx="100%" cy="100%" r="100%">
        <stop offset="50%" stop-color="#454545" />
        <stop offset="75%" stop-color="#353535" />
        <stop offset="100%" stop-color="#242424" />
      </radialGradient>
      <radialGradient id="cornerTR" cx="0%" cy="100%" r="100%">
        <stop offset="50%" stop-color="#454545" />
        <stop offset="75%" stop-color="#353535" />
        <stop offset="100%" stop-color="#242424" />
      </radialGradient>
      <radialGradient id="cornerBL" cx="100%" cy="0%" r="100%">
        <stop offset="50%" stop-color="#454545" />
        <stop offset="75%" stop-color="#353535" />
        <stop offset="100%" stop-color="#242424" />
      </radialGradient>
      <radialGradient id="cornerBR" cx="0%" cy="0%" r="100%">
        <stop offset="50%" stop-color="#454545" />
        <stop offset="75%" stop-color="#353535" />
        <stop offset="100%" stop-color="#242424" />
      </radialGradient>

      <!-- Band gradients -->
      <linearGradient id="topBand" x1="0%" y1="0%" x2="0%" y2="100%">
        <stop offset="0%" stop-color="#242424" />
        <stop offset="100%" stop-color="#353535" />
      </linearGradient>
      <linearGradient id="bottomBand" x1="0%" y1="0%" x2="0%" y2="100%">
        <stop offset="0%" stop-color="#353535" />
        <stop offset="100%" stop-color="#242424" />
      </linearGradient>

      <!-- End cap side gradients -->
      <linearGradient id="leftSide" x1="100%" y1="0%" x2="0%" y2="0%">
        <stop offset="50%" stop-color="#454545" />
        <stop offset="100%" stop-color="#242424" />
      </linearGradient>
      <linearGradient id="rightSide" x1="0%" y1="0%" x2="100%" y2="0%">
        <stop offset="50%" stop-color="#454545" />
        <stop offset="100%" stop-color="#242424" />
      </linearGradient>
    </defs>

    <!-- Default static render: 1500x1000mm = 450x300 units -->
    <g transform="translate(20, 20)">

      <!-- CASSETTE -->
      <g class="cassette">

        <!-- LEFT END (10px) -->
        <g class="left-end">
          <rect x="0" y="0" width="10" height="10" rx="10" fill="url(#cornerTL)" />
          <rect x="0" y="10" width="10" height="44" fill="url(#leftSide)" />
          <rect x="0" y="54" width="10" height="10" rx="10" fill="url(#cornerBL)" />
        </g>

        <!-- CONTAINER (flexible: 450 - 10 - 135 - 10 = 295) -->
        <g class="container" transform="translate(10, 0)">
          <rect x="0" y="0" width="295" height="10" fill="url(#topBand)" />
          <rect x="0" y="10" width="295" height="44" fill="#454545" />
          <rect x="0" y="54" width="295" height="10" fill="url(#bottomBand)" />
        </g>

        <!-- CONTAINER FIXED / SOLAR PANEL (135px scaled) -->
        <g class="container-fixed" transform="translate(305, 0)">
          <rect x="0" y="0" width="135" height="10" fill="url(#topBand)" />
          <rect x="0" y="10" width="135" height="44" fill="#454545" class="solar-panel" />
          <rect x="0" y="54" width="135" height="10" fill="url(#bottomBand)" />
        </g>

        <!-- RIGHT END (10px) -->
        <g class="right-end" transform="translate(440, 0)">
          <rect x="0" y="0" width="10" height="10" rx="10" fill="url(#cornerTR)" />
          <rect x="0" y="10" width="10" height="44" fill="url(#rightSide)" />
          <rect x="0" y="54" width="10" height="10" rx="10" fill="url(#cornerBR)" />
        </g>

      </g>

      <!-- RAILS & FABRIC -->
      <g class="rails-fabric" transform="translate(0, 64)">

        <!-- Left Rail -->
        <rect x="0" y="0" width="26" height="236" fill="#454545" />

        <!-- Fabric (450 - 52 = 398, height 236 - 16 = 220) -->
        <rect x="26" y="0" width="398" height="220" fill="#707070" opacity="0.92" class="fabric-rect" />

        <!-- Bottom Plate -->
        <rect x="26" y="220" width="398" height="16" fill="#454545" />

        <!-- Right Rail -->
        <rect x="424" y="0" width="26" height="236" fill="#454545" />

      </g>
    </g>
  </svg>

  <!-- Dimension Labels Overlay -->
  <div class="dimension-labels">
    <span class="dimension-label dimension-width">
      <span class="dimension-value" data-dimension="width">1500</span> mm
    </span>
    <span class="dimension-label dimension-height">
      <span class="dimension-value" data-dimension="height">1000</span> mm
    </span>
  </div>
</div>
