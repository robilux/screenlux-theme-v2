{% comment %}
  SVG Screen Configurator

  Gradients:
  - Top/bottom bands: dark at edge, light at 50%
  - Side bands: dark at edge, light at 50%
  - Bottom corners: mirrored versions of top corners

  Default: 1500mm x 1000mm at 0.3 scale
{% endcomment %}

<div
  id="svg-screen-configurator"
  class="svg-screen-configurator"
  data-frame-color="anthracite"
  data-fabric-color="charcoal"
  data-fabric-type="5-percent"
  data-motor="wired"
  data-width="1500"
  data-height="1000"
  aria-label="Interactive screen configurator preview"
>
  <svg
    viewBox="0 0 480 315"
    preserveAspectRatio="xMidYMid meet"
    class="configurator-svg"
    role="img"
    aria-label="Screen preview showing current configuration"
  >
    <defs>
      <!-- Corner gradients -->
      <radialGradient id="gradTL" gradientUnits="userSpaceOnUse" cx="0" cy="0" r="4" gradientTransform="matrix(-0.7 -0.75 0.75 -0.7 4 4)">
        <stop offset="0.50" stop-color="#454545" />
        <stop offset="0.75" stop-color="#353535" />
        <stop offset="1" stop-color="#242424" />
      </radialGradient>
      <radialGradient id="gradTR" gradientUnits="userSpaceOnUse" cx="0" cy="0" r="4" gradientTransform="matrix(0.7 -0.75 0.75 0.7 0 4)">
        <stop offset="0.50" stop-color="#454545" />
        <stop offset="0.75" stop-color="#353535" />
        <stop offset="1" stop-color="#242424" />
      </radialGradient>
      <radialGradient id="gradBL" gradientUnits="userSpaceOnUse" cx="0" cy="0" r="4" gradientTransform="matrix(-0.7 0.75 0.75 0.7 4 21)">
        <stop offset="0.50" stop-color="#454545" />
        <stop offset="0.75" stop-color="#353535" />
        <stop offset="1" stop-color="#242424" />
      </radialGradient>
      <radialGradient id="gradBR" gradientUnits="userSpaceOnUse" cx="0" cy="0" r="4" gradientTransform="matrix(0.7 0.75 0.75 -0.7 0 21)">
        <stop offset="0.50" stop-color="#454545" />
        <stop offset="0.75" stop-color="#353535" />
        <stop offset="1" stop-color="#242424" />
      </radialGradient>

      <!-- Top band: dark at top, light at 50% -->
      <linearGradient id="topBand" x1="0%" y1="0%" x2="0%" y2="100%">
        <stop offset="0%" stop-color="#242424" />
        <stop offset="50%" stop-color="#454545" />
      </linearGradient>

      <!-- Bottom band: light at 50%, dark at bottom -->
      <linearGradient id="bottomBand" x1="0%" y1="0%" x2="0%" y2="100%">
        <stop offset="50%" stop-color="#454545" />
        <stop offset="100%" stop-color="#242424" />
      </linearGradient>

      <!-- Left side: dark at left, light at 50% -->
      <linearGradient id="leftSide" x1="0%" y1="0%" x2="100%" y2="0%">
        <stop offset="0%" stop-color="#242424" />
        <stop offset="50%" stop-color="#454545" />
      </linearGradient>

      <!-- Right side: light at 50%, dark at right -->
      <linearGradient id="rightSide" x1="0%" y1="0%" x2="100%" y2="0%">
        <stop offset="50%" stop-color="#454545" />
        <stop offset="100%" stop-color="#242424" />
      </linearGradient>
    </defs>

    <g transform="translate(15, 15)">

      <!-- Cassette background -->
      <rect x="0" y="0" width="450" height="25" rx="4" fill="#454545" />
      <rect x="0" y="21" width="450" height="4" fill="#454545" />

      <g class="cassette">

        <!-- LEFT END -->
        <g class="left-end">
          <!-- Top-left corner -->
          <path d="M 4 0 L 4 0 L 4 4 L 0 4 L 0 4 A 4 4 0 0 1 4 0 Z" fill="url(#gradTL)" />
          <!-- Middle -->
          <rect x="0" y="4" width="4" height="17" fill="url(#leftSide)" />
          <!-- Bottom-left corner (mirrored) -->
          <path d="M 0 21 L 4 21 L 4 25 L 4 25 A 4 4 0 0 1 0 21 L 0 21 Z" fill="url(#gradBL)" />
        </g>

        <!-- CONTAINER -->
        <g class="container" transform="translate(4, 0)">
          <rect x="0" y="0" width="307" height="4" fill="url(#topBand)" />
          <rect x="0" y="4" width="307" height="17" fill="#454545" />
          <rect x="0" y="21" width="307" height="4" fill="url(#bottomBand)" />
        </g>

        <!-- SOLAR PANEL -->
        <g class="container-fixed" transform="translate(311, 0)">
          <rect x="0" y="0" width="135" height="4" fill="url(#topBand)" />
          <rect x="0" y="4" width="135" height="17" fill="#454545" class="solar-panel" />
          <rect x="0" y="21" width="135" height="4" fill="url(#bottomBand)" />
        </g>

        <!-- RIGHT END -->
        <g class="right-end" transform="translate(446, 0)">
          <!-- Top-right corner -->
          <path d="M 0 0 L 0 0 A 4 4 0 0 1 4 4 L 4 4 L 0 4 Z" fill="url(#gradTR)" />
          <!-- Middle -->
          <rect x="0" y="4" width="4" height="17" fill="url(#rightSide)" />
          <!-- Bottom-right corner (mirrored) -->
          <path d="M 0 21 L 4 21 L 4 21 A 4 4 0 0 1 0 25 L 0 25 Z" fill="url(#gradBR)" />
        </g>

      </g>

      <!-- RAILS & FABRIC -->
      <g class="rails-fabric" transform="translate(0, 25)">
        <rect x="0" y="0" width="12" height="275" fill="#454545" />
        <rect x="12" y="0" width="426" height="269" fill="#707070" opacity="0.92" class="fabric-rect" />
        <rect x="12" y="269" width="426" height="6" fill="#454545" />
        <rect x="438" y="0" width="12" height="275" fill="#454545" />
      </g>
    </g>
  </svg>

  <div class="screen-controls">
    <button type="button" class="screen-toggle-btn" data-screen-state="closed" aria-label="Open or close screen">
      <span class="screen-toggle-text">Open screen</span>
    </button>
    <button
      type="button"
      class="measurements-toggle-btn"
      data-measurements-visible="true"
      aria-label="Show or hide measurements"
    >
      <span class="measurements-toggle-text">Hide measurements</span>
    </button>
  </div>
</div>
