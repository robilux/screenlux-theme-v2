{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_mobile }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .logo-bar__wrapper {
    display: flex;
    align-items: center;
    gap: 24px;
    width: 100%;
    margin: 0 auto;

    /* Mobile: Scrollable */
    overflow-x: auto;
    flex-wrap: nowrap;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
    padding-bottom: 20px; /* Space for scrollbar if visible, or touch area */
    scrollbar-width: none; /* Hide scrollbar Firefox */
  }

  .logo-bar__wrapper::-webkit-scrollbar {
    display: none; /* Hide scrollbar Chrome/Safari */
  }

  @media screen and (min-width: 750px) {
    .logo-bar__wrapper {
      max-width: 800px;
      justify-content: center;
      flex-wrap: wrap;
      overflow-x: visible;
      padding-bottom: 0;
    }
  }

  .logo-bar__item {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    scroll-snap-align: center;
  }

  .logo-bar__item img {
    height: 100%;
    width: auto;
    object-fit: contain;
    display: block;
  }

  /* Uniform height for all logos */
  .logo-bar__item--gda26,
  .logo-bar__item--dmp,
  .logo-bar__item--ida,
  .logo-bar__item--badge,
  .logo-bar__item--matter {
    height: 80px;
    width: auto;
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="section-{{ section.id }}-padding page-width">
    <div class="logo-bar__wrapper">
      <div class="logo-bar__item logo-bar__item--gda26">
        {%- if section.settings.image_gda26 != blank -%}
          {{
            section.settings.image_gda26
            | image_url: width: 242
            | image_tag: loading: 'lazy', alt: section.settings.image_gda26.alt
          }}
        {%- else -%}
          <img src="{{ 'img-logobar-gda26.png' | asset_url }}" width="121" height="73" loading="lazy" alt="GDA26 Logo">
        {%- endif -%}
      </div>

      <div class="logo-bar__item logo-bar__item--dmp">
        {%- if section.settings.image_dmp != blank -%}
          {{
            section.settings.image_dmp
            | image_url: width: 114
            | image_tag: loading: 'lazy', alt: section.settings.image_dmp.alt
          }}
        {%- else -%}
          <img src="{{ 'img-logobar-dmp.png' | asset_url }}" width="57" height="73" loading="lazy" alt="DMP Logo">
        {%- endif -%}
      </div>

      <div class="logo-bar__item logo-bar__item--ida">
        {%- if section.settings.image_ida != blank -%}
          {{
            section.settings.image_ida
            | image_url: width: 158
            | image_tag: loading: 'lazy', alt: section.settings.image_ida.alt
          }}
        {%- else -%}
          <img src="{{ 'img-logobar-ida.png' | asset_url }}" width="79" height="73" loading="lazy" alt="IDA Logo">
        {%- endif -%}
      </div>

      <!-- Developed in Germany Badge (Image) -->
      <div class="logo-bar__item logo-bar__item--badge">
        {%- if section.settings.image_badge != blank -%}
          {{
            section.settings.image_badge
            | image_url: height: 88
            | image_tag: loading: 'lazy', alt: 'Developed in Germany'
          }}
        {%- else -%}
          <img
            src="{{ 'img-logobar-developed-in-germany.png' | asset_url }}"
            width="145"
            height="44"
            style="height: 100%; width: auto;"
            loading="lazy"
            alt="Developed in Germany"
          >
        {%- endif -%}
      </div>

      <!-- Matter Logo (Image) -->
      <div class="logo-bar__item logo-bar__item--matter">
        {%- if section.settings.image_matter != blank -%}
          {{ section.settings.image_matter | image_url: height: 146 | image_tag: loading: 'lazy', alt: 'Matter' }}
        {%- else -%}
          <img
            src="{{ 'img-logobar-matter.png' | asset_url }}"
            width="41"
            height="73"
            style="height: 100%; width: auto;"
            loading="lazy"
            alt="Matter"
          >
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Logo Bar",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Logos"
    },
    {
      "type": "image_picker",
      "id": "image_gda26",
      "label": "GDA26 Logo"
    },
    {
      "type": "image_picker",
      "id": "image_dmp",
      "label": "DMP Logo"
    },
    {
      "type": "image_picker",
      "id": "image_ida",
      "label": "IDA Logo"
    },
    {
      "type": "image_picker",
      "id": "image_badge",
      "label": "Badge Image (Developed in Germany)"
    },
    {
      "type": "image_picker",
      "id": "image_matter",
      "label": "Matter Logo"
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding mobile",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding mobile",
      "default": 40
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    }
  ],
  "presets": [
    {
      "name": "Logo Bar"
    }
  ]
}
{% endschema %}
