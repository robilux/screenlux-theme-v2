{%- style -%}
  /* ===== BASE ===== */
  #shopify-section-{{ section.id }} .tl-section {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 64px;
    padding: {{ section.settings.padding_top }}px 80px {{ section.settings.padding_bottom }}px;
    max-width: 1440px;
    margin: 0 auto;
    background-color: {{ section.settings.bg_color }};
    position: relative;
  }

  /* ===== TIMELINE CONNECTOR (center column) ===== */
  #shopify-section-{{ section.id }} .tl-section__connector {
    position: relative;
    width: 87px;
    flex-shrink: 0;
    align-self: stretch;
  }

  /* Top line segment – stops before the dot with a gap */
  #shopify-section-{{ section.id }} .tl-section__connector::before {
    content: '';
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    width: 1px;
    background-color: {{ section.settings.year_color }};
    opacity: 0.3;
    {% if section.settings.show_timeline_top %}
      top: 0;
    {% else %}
      top: 0;
      display: none;
    {% endif %}
    bottom: calc(50% + 13px + 6px); /* stop 6px gap before dot */
  }

  /* Bottom line segment – starts after the dot with a gap */
  #shopify-section-{{ section.id }} .tl-section__connector::after {
    content: '';
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    width: 1px;
    background-color: {{ section.settings.year_color }};
    opacity: 0.3;
    top: calc(50% + 13px + 6px); /* start 6px gap after dot */
    {% if section.settings.show_timeline_bottom %}
      bottom: 0;
    {% else %}
      bottom: 0;
      display: none;
    {% endif %}
  }

  /* Hide the old line divs – replaced by pseudo-elements */
  #shopify-section-{{ section.id }} .tl-section__line {
    display: none;
  }

  /* Dot centered vertically in connector */
  #shopify-section-{{ section.id }} .tl-section__dot {
    display: block;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 26px;
    height: 26px;
    border-radius: 50%;
    border: 2px solid {{ section.settings.year_color }};
    box-sizing: border-box;
  }

  /* ===== TEXT COLUMN ===== */
  #shopify-section-{{ section.id }} .tl-section__text {
    display: flex;
    flex-direction: column;
    gap: 24px;
    flex: 1 0 0;
    min-width: 0;
  }

  #shopify-section-{{ section.id }} .tl-section__text--right {
    text-align: left;
  }

  #shopify-section-{{ section.id }} .tl-section__text--left {
    text-align: right;
  }

  #shopify-section-{{ section.id }} .tl-section__year {
    font-family: 'Geist Mono', monospace;
    font-weight: 500;
    font-size: 20px;
    line-height: 1;
    color: {{ section.settings.year_color }};
    margin: 0;
  }

  #shopify-section-{{ section.id }} .tl-section__heading {
    font-family: 'Inter', sans-serif;
    font-weight: 500;
    font-size: 36px;
    line-height: 1;
    color: {{ section.settings.heading_color }};
    margin: 0;
  }

  #shopify-section-{{ section.id }} .tl-section__body {
    font-family: 'Inter', sans-serif;
    font-weight: 400;
    font-size: 16px;
    line-height: 1.5;
    color: {{ section.settings.body_color }};
    margin: 0;
    max-width: 800px;
  }

  #shopify-section-{{ section.id }} .tl-section__body strong {
    color: {{ section.settings.heading_color }};
  }

  /* ===== IMAGE ===== */
  #shopify-section-{{ section.id }} .tl-section__image-wrapper {
    position: relative;
    flex: 1 0 0;
    min-width: 0;
    height: 460px;
    border-radius: 32px;
    overflow: hidden;
  }

  #shopify-section-{{ section.id }} .tl-section__image-wrapper img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  #shopify-section-{{ section.id }} .tl-section__image-gradient {
    position: absolute;
    inset: 0;
    background: linear-gradient(to bottom, rgba(0,0,0,0) 60%, rgba(0,0,0,0.3) 100%);
    pointer-events: none;
    border-radius: 32px;
  }

  /* ===== END SECTION VARIANT ===== */
  #shopify-section-{{ section.id }} .tl-section--end {
    flex-direction: column;
    gap: 32px;
    align-items: center;
    text-align: center;
  }

  #shopify-section-{{ section.id }} .tl-section--end .tl-section__text {
    align-items: center;
    text-align: center;
    max-width: 800px;
  }

  #shopify-section-{{ section.id }} .tl-section--end .tl-section__body {
    text-align: center;
  }

  /* End-section logo / icon at top */
  #shopify-section-{{ section.id }} .tl-section__end-icon {
    width: 87px;
    height: 70px;
    flex-shrink: 0;
  }

  #shopify-section-{{ section.id }} .tl-section__end-icon img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  /* ===== CTA BUTTON ===== */
  #shopify-section-{{ section.id }} .tl-section__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    font-family: 'Inter', sans-serif;
    font-weight: 500;
    font-size: 14px;
    line-height: 1;
    padding: 12px 24px;
    min-width: 180px;
    height: 48px;
    border-radius: 8px;
    text-decoration: none;
    border: none;
    cursor: pointer;
    transition: opacity 0.2s;
    box-sizing: border-box;
  }

  #shopify-section-{{ section.id }} .tl-section__button:hover {
    opacity: 0.9;
  }

  /* ===== BACKGROUND WRAPPER ===== */
  #shopify-section-{{ section.id }} .tl-section__bg {
    background-color: {{ section.settings.bg_color }};
  }

  /* ===== MOBILE ===== */
  @media screen and (max-width: 749px) {
    /* Grid: line column left, content right (image row 1, text row 2) */
    #shopify-section-{{ section.id }} .tl-section {
      display: grid;
      grid-template-columns: 32px 1fr;
      grid-template-rows: auto auto;
      gap: 0 16px;
      padding: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px 16px {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }

    /* Connector: left column, spans all rows */
    #shopify-section-{{ section.id }} .tl-section__connector {
      grid-column: 1;
      grid-row: 1 / -1;
      width: 32px;
    }

    /* Hide dot on mobile */
    #shopify-section-{{ section.id }} .tl-section__dot {
      display: none;
    }

    /* Single continuous line on mobile (use ::before only) */
    #shopify-section-{{ section.id }} .tl-section__connector::before {
      {% if section.settings.show_timeline_top %}
        top: 0;
      {% else %}
        top: 0;
        display: none;
      {% endif %}
      bottom: 0;
    }

    /* Hide the bottom line segment on mobile – not needed */
    #shopify-section-{{ section.id }} .tl-section__connector::after {
      display: none;
    }

    /* Image: right column, row 1 (always on top) */
    #shopify-section-{{ section.id }} .tl-section__image-wrapper {
      grid-column: 2;
      grid-row: 1;
      height: 260px;
      border-radius: 24px;
      width: 100%;
      flex: none;
      margin-bottom: 24px;
    }

    #shopify-section-{{ section.id }} .tl-section__image-gradient {
      border-radius: 24px;
    }

    /* Text: right column, row 2 (below image) */
    #shopify-section-{{ section.id }} .tl-section__text {
      grid-column: 2;
      grid-row: 2;
    }

    #shopify-section-{{ section.id }} .tl-section__text--left,
    #shopify-section-{{ section.id }} .tl-section__text--right {
      text-align: left;
    }

    #shopify-section-{{ section.id }} .tl-section__heading {
      font-size: 28px;
    }

    #shopify-section-{{ section.id }} .tl-section__body {
      font-size: 14px;
    }

    /* End variant: keep centered, full width, hide connector */
    #shopify-section-{{ section.id }} .tl-section--end {
      display: flex;
      flex-direction: column;
      grid-template-columns: unset;
    }

    #shopify-section-{{ section.id }} .tl-section--end .tl-section__connector {
      display: none;
    }

    #shopify-section-{{ section.id }} .tl-section--end .tl-section__text {
      text-align: center;
      padding-bottom: 0;
    }

    #shopify-section-{{ section.id }} .tl-section__button {
      width: 100%;
      max-width: 300px;
    }
  }
{%- endstyle -%}

<div class="tl-section__bg">
  {%- case section.settings.variant -%}
    {%- when 'default' -%}
      {%- comment -%} DEFAULT: Text left | Connector | Image right {%- endcomment -%}
      <div class="tl-section tl-section--default" aria-label="{{ section.settings.heading }}">
        {%- comment -%} Text column (left) {%- endcomment -%}
        <div class="tl-section__text tl-section__text--left{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
          {%- if section.settings.year_label != blank -%}
            <p class="tl-section__year">{{ section.settings.year_label }}</p>
          {%- endif -%}
          {%- if section.settings.heading != blank -%}
            <h2 class="tl-section__heading">{{ section.settings.heading }}</h2>
          {%- endif -%}
          {%- if section.settings.body != blank -%}
            <div class="tl-section__body rte">{{ section.settings.body }}</div>
          {%- endif -%}
        </div>

        {%- comment -%} Timeline connector {%- endcomment -%}
        <div class="tl-section__connector">
          <div
            class="tl-section__line{% unless section.settings.show_timeline_top %} tl-section__line--hidden{% endunless %}"
          ></div>
          <div class="tl-section__dot"></div>
          <div
            class="tl-section__line{% unless section.settings.show_timeline_bottom %} tl-section__line--hidden{% endunless %}"
          ></div>
        </div>

        {%- comment -%} Image (right) {%- endcomment -%}
        <div class="tl-section__image-wrapper{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
          {%- if section.settings.image != blank -%}
            {{
              section.settings.image
              | image_url: width: 1500
              | image_tag:
                loading: 'lazy',
                sizes: '(max-width: 749px) 100vw, 50vw',
                widths: '375, 550, 750, 1100, 1500',
                class: 'tl-section__image'
            }}
          {%- else -%}
            {{ 'product-1' | placeholder_svg_tag: 'tl-section__image' }}
          {%- endif -%}
          <div class="tl-section__image-gradient" aria-hidden="true"></div>
        </div>
      </div>

    {%- when 'image_left' -%}
      {%- comment -%} IMAGE LEFT: Image left | Connector | Text right {%- endcomment -%}
      <div class="tl-section tl-section--image-left" aria-label="{{ section.settings.heading }}">
        {%- comment -%} Image (left) {%- endcomment -%}
        <div class="tl-section__image-wrapper{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
          {%- if section.settings.image != blank -%}
            {{
              section.settings.image
              | image_url: width: 1500
              | image_tag:
                loading: 'lazy',
                sizes: '(max-width: 749px) 100vw, 50vw',
                widths: '375, 550, 750, 1100, 1500',
                class: 'tl-section__image'
            }}
          {%- else -%}
            {{ 'product-2' | placeholder_svg_tag: 'tl-section__image' }}
          {%- endif -%}
          <div class="tl-section__image-gradient" aria-hidden="true"></div>
        </div>

        {%- comment -%} Timeline connector {%- endcomment -%}
        <div class="tl-section__connector">
          <div
            class="tl-section__line{% unless section.settings.show_timeline_top %} tl-section__line--hidden{% endunless %}"
          ></div>
          <div class="tl-section__dot"></div>
          <div
            class="tl-section__line{% unless section.settings.show_timeline_bottom %} tl-section__line--hidden{% endunless %}"
          ></div>
        </div>

        {%- comment -%} Text column (right) {%- endcomment -%}
        <div class="tl-section__text tl-section__text--right{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
          {%- if section.settings.year_label != blank -%}
            <p class="tl-section__year">{{ section.settings.year_label }}</p>
          {%- endif -%}
          {%- if section.settings.heading != blank -%}
            <h2 class="tl-section__heading">{{ section.settings.heading }}</h2>
          {%- endif -%}
          {%- if section.settings.body != blank -%}
            <div class="tl-section__body rte">{{ section.settings.body }}</div>
          {%- endif -%}
        </div>
      </div>

    {%- when 'end_section' -%}
      {%- comment -%} END SECTION: Centered text + CTA, no image {%- endcomment -%}
      <div
        class="tl-section tl-section--end{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"
        aria-label="{{ section.settings.heading }}"
      >
        {%- comment -%} Icon / logo at top {%- endcomment -%}
        {%- if section.settings.end_icon != blank -%}
          <div class="tl-section__end-icon">
            {{
              section.settings.end_icon
              | image_url: width: 174
              | image_tag: loading: 'lazy', widths: '87, 174', class: 'tl-section__end-icon-img'
            }}
          </div>
        {%- else -%}
          {%- comment -%} Fallback: show a timeline dot {%- endcomment -%}
          <div class="tl-section__connector" style="height: auto; align-self: center;">
            <div class="tl-section__dot"></div>
          </div>
        {%- endif -%}

        {%- comment -%} Centered text {%- endcomment -%}
        <div class="tl-section__text">
          {%- if section.settings.year_label != blank -%}
            <p class="tl-section__year">{{ section.settings.year_label }}</p>
          {%- endif -%}
          {%- if section.settings.heading != blank -%}
            <h2 class="tl-section__heading">{{ section.settings.heading }}</h2>
          {%- endif -%}
          {%- if section.settings.body != blank -%}
            <div class="tl-section__body rte">{{ section.settings.body }}</div>
          {%- endif -%}
        </div>

        {%- comment -%} CTA Button {%- endcomment -%}
        {%- if section.settings.button_label != blank -%}
          <a class="tl-section__button" href="{{ section.settings.button_link }}">
            {{ section.settings.button_label }}
          </a>
        {%- endif -%}
      </div>
  {%- endcase -%}
</div>

<script>
  (function () {
    var el = document.querySelector('#shopify-section-{{ section.id }} .tl-section');
    if (!el) return;
    el.style.opacity = '0.15';
    var ticking = false;

    function update() {
      var rect = el.getBoundingClientRect();
      var wh = window.innerHeight;
      var center = rect.top + rect.height / 2;
      var dist = Math.abs(center - wh / 2);
      var maxDist = wh / 2 + rect.height / 2;
      var ratio = Math.max(0, 1 - dist / maxDist);
      var opacity = 0.15 + Math.pow(ratio, 1.5) * 0.85;
      el.style.opacity = opacity;
      ticking = false;
    }

    window.addEventListener(
      'scroll',
      function () {
        if (!ticking) {
          ticking = true;
          requestAnimationFrame(update);
        }
      },
      { passive: true }
    );
    update();
  })();
</script>

